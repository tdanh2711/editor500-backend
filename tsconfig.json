{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    // waiting until this resolved https://github.com/microsoft/etcd3/issues/54
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "es2017", "esnext", "dom"],
    "paths": {
      "*": ["*", "node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "diststag", "distprod", "test"]
}
